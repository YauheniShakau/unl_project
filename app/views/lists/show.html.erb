<div class="page-header h1">
  <%= @list.name %>
</div>

<% @list.tasks.each do |task| %>
  <h2>
   	<%= task.name %><br>
  </h2>
<% end %>

<div class="btn ">
    <%= link_to 'Back', lists_path, :class => "btn btn-primary btn-sm" %>
	<% if @list.user == current_user %>
	<%= link_to 'Edit', edit_list_path(@list), :class => "btn btn-default btn-sm" %>
	<%= link_to 'Destroy', @list, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default btn-sm" %>
	<% end %>
</div>